/*页面初始变量值*/
.navc {
  position: fixed;
  top: 42px;
  left: 0;
  right: 0;
  z-index: 101;
  background-color: #fff;
}
.navc ul {
  display: flex;
  position: relative;
}
.navc ul li {
  flex: 1 0 auto;
}
.navc ul li a {
  color: #333;
  height: 30px;
  line-height: 30px;
  font-size: 14px;
  padding: 0 20px;
}
.navc ul li a i.bg1 {
  width: 0.24rem;
  height: 0.13333333rem;
  background: url(../img/morez@2x.png) 0 0 no-repeat;
  background-size: 0.24rem 0.13333333rem;
  margin-top: 0.4rem;
  transition: 1s ease;
  margin-left: 0.12rem;
}
/*下拉菜单ok*/
ul[class$=listmenu] {
  display: none;
  left: 0;
  right: 0;
  z-index: 101;
  max-height: 30vh;
  overflow-y: scroll;
}
ul[class$=listmenu] li {
  background-color: #fff;
  border-top: 1px solid #f5f5f5;
}
ul[class$=listmenu] li a {
  display: inline-block;
  width: 100vw;
  line-height: 30px;
  box-sizing: border-box;
}
ul[class$=listmenu] li a i.xz {
  display: none;
  width: 0.4rem;
  height: 0.93333333rem;
  background: url("../img/选择@2x.png") 0 0.26666667rem no-repeat;
  background-size: 0.4rem 0.26666667rem;
}
/*ok*/
ul.droplistmenu {
  position: absolute;
  top: 30px;
}
ul.droplistmenu li {
  max-width: 100vw;
}
.yet {
  color: #facd1b !important;
}
