.main {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: 0;
  background-color: #fff;
  overflow: hidden;
}
.banner {
  position: relative;
  width: 100%;
  height: 28vh;
  margin-bottom: 2vh;
}
.banner img {
  display: block;
}
.bgImg {
  width: 100%;
  height: 100%;
}
.topImg {
  position: absolute;
  width: 3.813rem;
  height: 3.813rem;
  top: 50%;
  left: 50%;
  margin-top: -1.9065rem;
  margin-left: -1.9065rem;
}
#gre {
  height: 0.5rem;
  width: 100%;
  background-color: #f5f5f5;
}
.mainNav {
  overflow: hidden;
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
}
.mainNav .item {
  height: 23.3vh;
  flex: 0 1 50%;
  box-sizing: border-box;
  padding: 1.4rem 0;
  text-align: center;
}
.mainNav .item a {
  display: block;
  position: relative;
}
.mainNav img {
  width: 3.75rem;
  height: 3.75rem;
  display: block;
  margin: 0 auto;
}
.mainNav .tu {
  width: 3rem;
  height: 3rem;
  padding: 0.375rem;
}
.mainNav span {
  position: absolute;
  text-align: center;
  width: 3.75rem;
  height: 2rem;
  line-height: 2rem;
  top: 30%;
  left: 50%;
  margin-top: -1rem;
  margin-left: -1.875rem;
  color: #fff;
  font-size: 0.823rem;
}
.mainNav p {
  font-size: 1.063rem;
  color: #333333;
  margin-top: 0.938rem;
}
